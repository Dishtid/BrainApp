<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_puzzlea"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="00dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/lbgcolors"
        android:id="@+id/imageView3"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="530dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/redapple"
        android:id="@+id/imgview" />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/mango"
        android:id="@+id/imgviewa" />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/banana"
        android:id="@+id/imgviewb" />
    <GridLayout
        android:layout_width="550dp"
        android:layout_height="50dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="410dp">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            app:srcCompat="@drawable/rewind"
            android:scaleType="fitXY"
            android:id="@+id/btn_rewind"
            android:background="@drawable/roundbutton"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/prev"
            android:id="@+id/btn_prev"
            android:background="@drawable/roundbutton" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="130dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/next"
            android:id="@+id/btn_next"
            android:background="@drawable/roundbutton" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/forward"
            android:id="@+id/btn_forward"
            android:background="@drawable/roundbutton" />
    </GridLayout>

    <TextView
        android:text="RED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="82dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="12dp"
        android:id="@+id/textView"
        android:fontFamily="sans-serif"

        android:textSize="@android:dimen/notification_large_icon_height"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/home"
        android:id="@+id/btn_home"
        android:background="@drawable/roundbutton" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft = "0dp"
        android:layout_marginTop = "0dp">


        <ImageView
            android:layout_width="200dp"
            android:layout_height="350dp"
            app:srcCompat="@drawable/bee01"
            android:id="@+id/imgbee"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="825dp"
            android:layout_marginTop="100dp"/>
    </RelativeLayout>

    <!--  <ImageView
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:layout_marginLeft="800dp"
          app:srcCompat="@drawable/sunshinelogo"
          android:id="@+id/logo"
          android:scaleType="fitXY" /> !-->


</FrameLayout>